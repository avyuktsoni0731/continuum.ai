# Jira Configuration
# Get your API token from: https://id.atlassian.com/manage-profile/security/api-tokens
JIRA_BASE_URL=https://yourcompany.atlassian.net
JIRA_API_USER=your-email@company.com
JIRA_API_TOKEN=your-api-token

# GitHub Configuration
# Get your token from: https://github.com/settings/tokens
GITHUB_TOKEN=ghp_xxx
GITHUB_OWNER=your-username
GITHUB_REPO=your-repo-name

# Google Calendar Configuration
# Option 1: Service Account (recommended for production)
# GOOGLE_SERVICE_ACCOUNT_FILE=/path/to/service-account-key.json
# Option 2: OAuth Token (for development - will create token.json)
# GOOGLE_TOKEN_FILE=token.json

# GCP Configuration (for Gemini)
GCP_PROJECT_ID=continuum-ai-482615
GCP_LOCATION=global
# For EC2: Set path to service account key JSON file
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# Slack Configuration
# Get your bot token from: https://api.slack.com/apps (OAuth & Permissions)
SLACK_BOT_TOKEN=xoxb-your-bot-token-here
# Optional: For request verification (recommended for production)
# SLACK_SIGNING_SECRET=your-signing-secret

# Database Configuration
# SQLite (default - no setup needed)
# DATABASE_URL=sqlite:///continuum.db
# PostgreSQL (recommended for production)
# DATABASE_URL=postgresql://user:password@localhost:5432/continuum
# MySQL
# DATABASE_URL=mysql+pymysql://user:password@localhost:3306/continuum
# Enable SQL query logging (useful for debugging)
# DB_ECHO=false

